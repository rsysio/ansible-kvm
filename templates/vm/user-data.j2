#cloud-config
hostname: {{ vm.name }}
fqdn: {{ vm.name }}.{{ kvm_domain_name }}
manage_etc_hosts: true
bootcmd:
  - "sed -i 's/send host-name = gethostname();/send host-name = node2;/' /etc/dhcp/dhclient.conf"
{% if kvm_user_data is defined %}
{{ kvm_user_data }}
{% endif %}
{% if vm.user_data is defined %}
{{ vm.user_data }}
{% endif %}

